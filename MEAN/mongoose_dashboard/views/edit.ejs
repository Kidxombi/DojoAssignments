<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Edit Crow</title>
        <% include links %>
    </head>
    </head>
    <body>
        <div class="container editWrapper">

            <a href="/"><button type="button" name="button">Home</button></a>
            <a href="/read/<%= crow._id %>"><button type="button" name="button">Back</button></a>

            <form action="/edit/<%= crow._id %>" method="post">
                <h1><input type="text" name="name" placeholder="<%= crow.name %>"> the Crow</h1>
                <h2>Personality: <input type="text" name="personality" placeholder="<%= crow.personality %>"></h2>
                <h2>Age: <input type="text" name="age" placeholder="<%= crow.age %>"></h2>
                <input type="submit" name="submit" value="submit changes">
            </form>
        </div>
    </body>
</html>
